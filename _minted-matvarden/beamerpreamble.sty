\newlength{\imageheight}
\newcommand{\splitimage}[1]{%
    {%
    \begin{columns}[T]
        \settoheight{\imageheight}{\includegraphics{#1}}
        \column{.5\textwidth}
            \centering
            \includegraphics[trim=0 0.5\imageheight{} 0 0, clip, width=\textwidth]{#1}
        \column{.5\textwidth}
            \centering
            \includegraphics[trim=0 0 0 0.5\imageheight{}, clip, width=\textwidth]{#1}
    \end{columns}
    }%
}

